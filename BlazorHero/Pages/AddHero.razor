@page "/AddHero"
@page "/EditHero/{Id:int}"
@inherits AddHeroBase
@if (IsSaved)
{
    <div class="alert alert-success">
        <strong>Success!</strong> operation is successfully done.
    </div>
}
<div class="container-fluid">
    <div class="row">

       
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center">Add New Hero</h3>

                    <EditForm Model="@HeroToAdd" OnValidSubmit="@AddHeroClick">
                        <DataAnnotationsValidator />

                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <InputText id="firstName" class="form-control" @bind-Value="HeroToAdd.FirstName" />
                            <ValidationMessage For="@(() => HeroToAdd.FirstName)" />
                        </div>

                        <div class="form-group">
                            <label for="lastName">Last Name:</label>
                            <InputText id="lastName" class="form-control" @bind-Value="HeroToAdd.LastName" />
                            <ValidationMessage For="@(() => HeroToAdd.LastName)" />
                        </div>

                        <div class="form-group">
                            <label for="age">Age:</label>
                            <InputNumber id="age" class="form-control" @bind-Value="HeroToAdd.Age" />
                            <ValidationMessage For="@(() => HeroToAdd.Age)" />
                        </div>

                        <div class="form-group">
                            <label for="heroName">Hero Name:</label>
                            <InputText id="heroName" class="form-control" @bind-Value="HeroToAdd.NameHero" />
                            <ValidationMessage For="@(() => HeroToAdd.NameHero)" />
                        </div>

                        <div class="form-group">
                            <label for="photo">Photo:</label>
                            <InputText id="photo" class="form-control" @bind-Value="HeroToAdd.photo" />
                            <ValidationMessage For="@(() => HeroToAdd.photo)" />
                        </div>
                        <div>
                            
                                 @if (!string.IsNullOrEmpty(HeroToAdd.photo))
                                        {
                                          <div class="image-container">
                                          <img class="img-fluid" src="@HeroToAdd.photo" alt="Hero Image" />
                                </div>
                            }
                            else
                            {
                            <InputFile id="photo" OnChange="@LoadFiles" accept=".jpg, .jpeg, png" @bind-Value="HeroToAdd.photo" />
                            <ValidationMessage For="@(() => HeroToAdd.photo)" />
                            }
                        </div>

                        <div class="form-group">
                            <label for="gender">Gender:</label>
                            <InputText id="gender" class="form-control" @bind-Value="HeroToAdd.gender" />
                            <ValidationMessage For="@(() => HeroToAdd.gender)" />
                        </div>

                        <div class="form-group">
                            <label for="description">Description:</label>
                            <textarea id="description" class="form-control" rows="4" @bind="HeroToAdd.Description"></textarea>
                            <ValidationMessage For="@(() => HeroToAdd.Description)" />
                        </div>

                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-custom-edit">Save </button>
                            <button type="button" class="btn btn-outline-danger" @onclick="@Cancel">Cancel</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div>
                <img src="/Images/add.png" class="img-fluid rounded-pill" alt="...">
            </div>
        </div>
    </div>
    
</div>


