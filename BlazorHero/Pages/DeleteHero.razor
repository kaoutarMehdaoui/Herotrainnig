@page "/DeleteHero/{Id:int}"
@inherits DeleteHeroBase
<h3>DeleteHero</h3>

@if( herotoremove!= null)
{
    <div class="bg-light p-5 text-center">
        <h2>Delete Hero </h2>
        <p>Are you sure you want to delete this Hero with Name: @herotoremove.NameHero</p>
        <button class="btn btn-danger" @onclick="()=>DeleteHero(herotoremove.Id)">Yes</button>
        <button class="btn btn-success" @onclick="@Cancel">No</button>
    </div>
}
else
{
    <p> hero to delete not found </p>
}


